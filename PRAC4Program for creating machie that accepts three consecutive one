def state_A(n):
    if len(n) == 0:
        print("String is rejected") 
        return
    if n[0] == '0':
        return state_A(n[1:])
    elif n[0] == '1':
        return state_B(n[1:])

def state_B(n):
    if len(n) == 0:
        print("String is rejected")
        return
    if n[0] == '0':
        return state_D(n[1:])
    elif n[0] == '1':
        return state_C(n[1:])

def state_C(n):
    if len(n) == 0:
        print("String is rejected")
        return
    if n[0] == '0':
        print("String is rejected!")  
        return
    elif n[0] == '1':
        return state_F(n[1:])

def state_D(n):
    if len(n) == 0:
        print("String is rejected")
        return
    if n[0] == '0':
        return state_D(n[1:])
    elif n[0] == '1':
        return state_C(n[1:])

def state_F(n):
    if len(n) == 0:
        print("String is accepted") 
        return
    if n[0] == '0':
        return state_F(n[1:])
    elif n[0] == '1':
        return state_B(n[1:])


n = input("Give a string in combination of 0,1:Â ")
state_A(n)

